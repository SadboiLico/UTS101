<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <EditText 
        android:id="@+id/etbarisderet1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan bilangan pertama"
        />
    
    <EditText
        android:id="@+id/etbarisderet2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan bilangan kedua"
        android:layout_below="@+id/etbarisderet1"
        />
    
    <EditText
        android:id="@+id/etbarisderet3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan bilangan ketiga"
        android:layout_below="@+id/etbarisderet2"
        />
    
    <Button
        android:id="@+id/btnbarisderet1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung"
        android:layout_below="@+id/etbarisderet3"
        />
    
    <TextView
        android:id="@+id/tvbarisderet1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnbarisderet1"
        />
    
    
            
    

</RelativeLayout>
